<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--main-->
    <style name="LlBookPush">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="RlBookPush">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">106dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="TvBookPushFontBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TvBookPushFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TvBookPushFontEnglish">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="IvTriangle">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">54dp</item>
        <item name="android:src">@drawable/icon_triangle</item>
        <item name="android:contentDescription">@string/guider</item>
    </style>
    <style name="TvBookPushFontBigEnglish">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">68dp</item>
        <item name="android:alpha">0.4</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="LlInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/shape_corner_white</item>
    </style>
    <style name="EtInputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">10</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="LlNotification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LlCallno">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_callno</item>
    </style>
    <style name="RlTurnCallno">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="IvTurnCallno">
        <item name="android:layout_width">9dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="LlCallnoText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_weight">9</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/shape_corner_white</item>
    </style>
    <style name="LlCallnoContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="RlCallnoShelf">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/shape_corner_grey</item>
    </style>
    <style name="TvCallnoShelf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#2FB28B</item>
    </style>
    <style name="IvCallnoShelf">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:src">@drawable/icon_triangle_down</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <style name="TvCallnoShelfNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TvCallnoShelfContent">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="RlConsult">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/shape_circle_white</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="IvConsult">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/icon_consult</item>
    </style>
    
    <!--search-->
    <style name="CbCanloan">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/show_can_loan</item>
        <item name="android:textSize">10sp</item>
        <item name="android:button">@drawable/checkbox_set</item>
    </style>
    
    <!--dialog-->
    <style name="SearchDialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置背景模糊的透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!--advice item-->
    <style name="ContainerAdvise">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    <style name="ContainerIconAdvise">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
    </style>


    <!--includ-->
    <style name="BgContainerInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">420dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/shape_bg</item>
    </style>

</resources>
